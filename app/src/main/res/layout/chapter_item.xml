        android:layout_height="wrap_content"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tvNgaychap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="06-9-2023"
        android:textColor="#636262"
        android:textSize="13sp">

    </TextView>

</LinearLayout>
