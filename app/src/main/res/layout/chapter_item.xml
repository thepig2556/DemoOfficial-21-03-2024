    android:padding="5dp"
    android:layout_height="70dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSochap"
        android:text="Chap 1"
        android:textColor="#000"
        android:padding="3dp"
        android:textSize="25dp"
